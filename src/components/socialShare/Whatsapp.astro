interface Props {
  url?: string;
  title?: string;
  description?: string;
  via?: string;
}
const { url = Astro.url, description, via } = Astro.props;

let URL = `whatsapp://send?text=`;

if (description) URL += `${description} `;
URL += `${url}`;
---

<a
  class="text-l/secondary dark:text-d/secondary hover:dark:text-d/tertiary"
  target="_blank"
  href={encodeURI(URL)}
  rel="noopener noreferrer"
  data-action="share/whatsapp/share"
>
  <slot>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      width="16"
      height="16"
    >
      <title>Whatsapp</title>
